CC=@CC@
CFLAGS=@CFLAGS@ @OPENMP_CFLAGS@
LFLAGS=@LIBS@
MACROS=@DEFS@

libmpow:
	$(CC) $(CFLAGS) -shared -o libmpow.so -fPIC mpow.c $(LFLAGS) $(MACROS)

mpow:
	$(CC) $(CFLAGS) -o mpow mpow.c $(LFLAGS) $(MACROS)

clean:
	rm -rf autom4te.cache configure config.log config.status

clean_all:
	make clean
	rm -rf mpow mpow.cl.bin libmpow.so
