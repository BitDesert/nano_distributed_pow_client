CC=@CC@
CFLAGS=@CFLAGS@ @OPENMP_CFLAGS@
LFLAGS=@LIBS@
MACROS=@DEFS@

libmpow:
	$(CC) -shared -o libmpow.so $(MACROS) -fPIC mpow.c $(CFLAGS) $(LFLAGS)
	
mpow:
	$(CC) -o mpow $(MACROS) mpow.c $(CFLAGS) $(LFLAGS)

clean:
	rm -rf autom4te.cache configure config.log config.status

clean_all:
	make clean
	rm -rf mpow libmpow.so
