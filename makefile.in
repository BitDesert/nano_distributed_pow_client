CC=@CC@
CFLAGS=@CFLAGS@ @OPENMP_CFLAGS@
LFLAGS=@LIBS@
MACROS=@DEFS@

libmpow:
	$(CC) -shared -o libmpow.so $(CFLAGS) $(LFLAGS) $(MACROS) -fPIC mpow.c
	
mpow:
	$(CC) -o mpow $(CFLAGS) $(LFLAGS) $(MACROS) mpow.c

clean:
	rm -rf autom4te.cache configure config.log config.status

clean_all:
	make clean
	rm -rf mpow libmpow.so
